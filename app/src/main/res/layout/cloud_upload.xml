<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@android:color/white">

    <TextView
        android:layout_width="120dp"
        android:layout_height="70dp"
        android:text="音楽"
        android:id="@+id/musictextView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="50dp"
        android:textColor="@android:color/black"
        android:gravity="center_horizontal" />

    <ImageView
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:id="@+id/returnView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@mipmap/return_100" />

    <ImageView
        android:layout_width="90dp"
        android:layout_height="65dp"
        android:id="@+id/homeView"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:src="@mipmap/home_100" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="15px"
        android:id="@+id/blacklineView"
        android:src="@mipmap/dot_black"
        android:scaleType="fitXY"
        android:layout_below="@+id/musictextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="570dp"
        android:layout_height="85dp"
        android:layout_below="@+id/blacklineView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="20dp"
        android:baselineAligned="false"
        android:background="@drawable/layout_shape"
        android:id="@+id/linearLayout9">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Name"
            android:id="@+id/nameView"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="40dp"
            android:textColor="#ff007cff"
            android:background="@drawable/layout_shape" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Data"
            android:id="@+id/dataView"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="40dp"
            android:textColor="#ff007cff"
            android:background="@drawable/layout_shape" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Type"
            android:id="@+id/typeView"
            android:layout_weight="1"
            android:textSize="40dp"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:background="@drawable/layout_line" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:id="@+id/graylineView"
        android:src="@mipmap/dot_gray"
        android:scaleType="fitXY"
        android:layout_below="@+id/linearLayout9"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="135dp"
        android:layout_below="@+id/graylineView"
        android:id="@+id/linearLayout10">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="105dp"
            android:layout_below="@+id/graylineView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/noteView"
                android:layout_weight="1"
                android:src="@mipmap/kigou2"
                android:scaleType="fitCenter"
                android:layout_marginLeft="15dp" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:layout_marginLeft="50dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ドラえもんのうた"
                    android:id="@+id/musictitleView"
                    android:layout_weight="1"
                    android:textColor="@android:color/black"
                    android:textSize="28dp"
                    android:gravity="center_vertical" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" 2015/10/12"
                    android:id="@+id/musicdataView"
                    android:layout_weight="1"
                    android:textSize="28dp"
                    android:textColor="@android:color/black"
                    android:gravity="center_vertical" />
            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/cloudView"
                android:layout_weight="1.5"
                android:src="@mipmap/download_from_cloud_100"
                android:scaleType="fitXY" />

        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:id="@+id/graylineView2"
            android:src="@mipmap/dot_gray"
            android:scaleType="fitXY"
            android:layout_below="@+id/linearLayout9"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="15dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/layout_design">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:id="@+id/photo_movieView"
            android:text="写真/動画"
            android:textSize="50dp"
            android:background="@drawable/layout_design"
            android:gravity="center"
            android:layout_above="@+id/musicView"
            android:layout_centerHorizontal="true"
            android:layout_weight="1"
            android:textColor="@android:color/white" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:text="音楽"
            android:id="@+id/musicView"
            android:layout_above="@+id/otherView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@drawable/layout_design"
            android:textSize="50dp"
            android:gravity="center"
            android:layout_weight="1"
            android:textColor="@android:color/white" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:text="その他"
            android:id="@+id/otherView"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/photo_movieView"
            android:layout_alignStart="@+id/photo_movieView"
            android:background="@drawable/layout_design"
            android:textSize="50dp"
            android:gravity="center"
            android:layout_weight="1"
            android:textColor="@android:color/white" />

    </LinearLayout>

</RelativeLayout>