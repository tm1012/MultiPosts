<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@android:color/white">

    <TextView
        android:layout_width="120dp"
        android:layout_height="70dp"
        android:text="写真"
        android:id="@+id/phototextView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="50dp"
        android:textColor="@android:color/black"
        android:gravity="center" />

    <ImageView
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:id="@+id/returnView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@mipmap/return_100" />

    <ImageView
        android:layout_width="90dp"
        android:layout_height="65dp"
        android:id="@+id/homeView"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:src="@mipmap/home_100" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="15px"
        android:id="@+id/blacklineView"
        android:src="@mipmap/dot_black"
        android:scaleType="fitXY"
        android:layout_below="@+id/phototextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="570dp"
        android:layout_height="85dp"
        android:layout_below="@+id/blacklineView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="20dp"
        android:baselineAligned="false"
        android:background="@drawable/layout_shape"
        android:id="@+id/linearLayout9">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="List"
            android:id="@+id/listView"
            android:gravity="center"
            android:textSize="35dp"
            android:textColor="#ff007cff"
            android:background="@drawable/layout_shape"
            android:layout_weight="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Thumbs"
            android:id="@+id/thumbsView"
            android:gravity="center"
            android:textSize="35dp"
            android:textColor="#ff007cff"
            android:background="@drawable/layout_shape"
            android:layout_weight="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Year"
            android:id="@+id/yearView"
            android:textSize="35dp"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:background="@drawable/layout_line"
            android:layout_weight="1" />

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:id="@+id/graylineView"
        android:scaleType="fitXY"
        android:layout_below="@+id/linearLayout9"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp"
        android:background="@android:color/darker_gray" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="560dp"
        android:layout_below="@+id/graylineView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_margin="5dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/photoView"
                android:layout_weight="1.5"
                android:background="@android:color/black"
                android:layout_margin="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="2015"
                android:id="@+id/dataView"
                android:layout_weight="2.5"
                android:textColor="@android:color/black"
                android:textSize="50dp"
                android:gravity="center" />
        </LinearLayout>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:id="@+id/graylineView2"
            android:layout_below="@+id/linearLayout16"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp"
            android:background="@android:color/darker_gray" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_margin="5dp" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/photoView2"
                android:layout_weight="1.5"
                android:background="@android:color/black"
                android:layout_margin="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="2014"
                android:id="@+id/dataView2"
                android:layout_weight="2.5"
                android:textColor="@android:color/black"
                android:textSize="50dp"
                android:gravity="center" />
        </LinearLayout>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:id="@+id/graylineView3"
            android:layout_below="@+id/linearLayout16"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp"
            android:background="@android:color/darker_gray" />
    </LinearLayout>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/plusView"
        android:src="@mipmap/plusfield"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>