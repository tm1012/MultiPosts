<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#ffffffff">

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/new_deleteView"
        android:src="@mipmap/delete_sign_100"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="15px"
        android:id="@+id/blacklineView"
        android:src="@mipmap/dot_black"
        android:scaleType="fitXY"
        android:layout_below="@+id/new_deleteView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/sendView"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:src="@mipmap/sent_100" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:text=" To:"
        android:id="@+id/to_View"
        android:textSize="55dp"
        android:textColor="#ff000000"
        android:layout_below="@+id/blacklineView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="15px"
        android:id="@+id/blacklineView2"
        android:src="@mipmap/dot_black"
        android:scaleType="fitXY"
        android:layout_below="@+id/to_View"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:text=" Cc/Bcc"
        android:id="@+id/cc_View"
        android:singleLine="true"
        android:textSize="55dp"
        android:layout_below="@+id/blacklineView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#ff000000" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="15px"
        android:id="@+id/blacklineView2"
        android:src="@mipmap/dot_black"
        android:scaleType="fitXY"
        android:layout_below="@+id/cc_View"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="140dp"
        android:layout_height="70dp"
        android:text=" 件名:"
        android:id="@+id/title_View"
        android:textSize="50dp"
        android:textColor="#ff000000"
        android:layout_below="@+id/blacklineView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="15px"
        android:id="@+id/blacklineView4"
        android:src="@mipmap/dot_black"
        android:scaleType="fitXY"
        android:layout_below="@+id/title_View"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/contentText"
        android:layout_below="@+id/blacklineView4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/sendView"
        android:layout_alignEnd="@+id/sendView" />

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/to_plusView"
        android:src="@mipmap/plus_math_100"
        android:layout_above="@+id/blacklineView2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:scaleType="fitXY" />

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/cc_plusView"
        android:layout_below="@+id/blacklineView2"
        android:layout_alignRight="@+id/sendView"
        android:layout_alignEnd="@+id/sendView"
        android:src="@mipmap/plus_math_100" />

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/file_plusView"
        android:layout_above="@+id/blacklineView4"
        android:layout_alignLeft="@+id/cc_plusView"
        android:layout_alignStart="@+id/cc_plusView"
        android:src="@mipmap/pin_3_100" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:id="@+id/editText"
        android:textSize="50dp"
        android:textIsSelectable="false"
        android:layout_above="@+id/blacklineView2"
        android:layout_toRightOf="@+id/to_View"
        android:layout_alignRight="@+id/editText2"
        android:layout_alignEnd="@+id/editText2"
        android:text="aaa" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:id="@+id/editText2"
        android:textSize="50dp"
        android:layout_above="@+id/blacklineView2"
        android:layout_toRightOf="@+id/cc_View"
        android:layout_toLeftOf="@+id/cc_plusView"
        android:layout_toStartOf="@+id/cc_plusView" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:id="@+id/editText3"
        android:layout_below="@+id/blacklineView2"
        android:layout_toRightOf="@+id/title_View"
        android:textSize="50dp"
        android:layout_alignRight="@+id/editText2"
        android:layout_alignEnd="@+id/editText2" />

</RelativeLayout>